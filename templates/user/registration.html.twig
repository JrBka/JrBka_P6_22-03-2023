{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Registration{% endblock %}

{% block body %}
    <section class="d-flex flex-column align-items-center " style="height: 90vh">
        <div class="col-8 col-lg-3 my-auto">
            <h1 class="mb-5 text-center" style="font-size: 68px" >Inscription</h1>

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
                <div class="form-error text-danger">
                    {{ form_errors(form.username) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword) }}
                <div class="form-error text-danger">
                    {{ form_errors(form.plainPassword) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="form-error text-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group mt-5">
                {{ form_row(form.submit) }}
            </div>

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
