{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Reset Password{% endblock %}

{% block body %}
    <section class="d-flex flex-column align-items-center " style="height: 90vh">
        <div class="col-8 col-lg-3 my-auto">
            <h1 class="mb-5 text-center" style="font-size: 68px" >Modification du mot de passe</h1>
            <form action="{{ path('check_token',{'slug':'newPassword','token':token}) }}" method="post" class="mb-4">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" class="form-control" id="username" name="_username">
                </div>
                <div class="form-group">
                    <label for="password">Nouveau mot de passe</label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="**********">
                </div>
                <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
            </form>
        </div>
    </section>
{% endblock %}