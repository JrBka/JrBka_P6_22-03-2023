{% if pages > 1 %}

    <div>
        <ul class="pagination">


            {% if currentPage > 1 %}

                <li class="page-item">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage - 1})~'#comments' }}"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">&laquo;</font></font></a>
                </li>

            {% else %}

                <li class="page-item disabled">
                    <a class="page-link" href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">&laquo;</font></font></a>
                </li>

            {% endif %}

            {% for page in 1..pages %}

                <li class="page-item {{ page == currentPage ? 'active' : '' }} ">
                    <a href="{{ path(path, { slug: slug, page: page})~'#comments' }}" class="page-link">{{ page }}</a>
                </li>

            {% endfor %}

            {% if currentPage < pages %}

                <li class="page-item">
                    <a class="page-link" href="{{ path(path, {slug: slug, page: currentPage + 1})~'#comments' }}"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">&raquo;</font></font></a>
                </li>

            {% else %}

                <li class="page-item disabled">
                    <a class="page-link" href="#"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">&raquo;</font></font></a>
                </li>

            {% endif %}

        </ul>
    </div>

{% endif %}