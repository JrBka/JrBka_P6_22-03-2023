{% extends 'base.html.twig' %}

{% block title %}Snowtrick - Update {{ trick.name }}{% endblock %}

{% block body %}
    <section class="mb-5 mb-lg-2 pb-5 pb-lg-2">
        <div class="border min-vh-100 ">
            <div class="w-auto m-auto " style="height: 50vh; background: center/ cover no-repeat url({{ trick.pictures ? asset('images/'~trick.pictures[0]) : asset('images/snowboard.jpg') }})">
                <div class="position-relative px-4 px-lg-5 h-100 mw-100 d-flex justify-content-center align-items-center" style="background-color: black; opacity: 0.7">
                    <div class="position-absolute " style="top: 5%; right: 5%">
                        <button type="button" class="btn btn-primary text-light me-2 p-0">
                            <a class="btn text-light" href="{{ path('app_tricks_editmedia',{'trickName':trick.name,'slug':'updatePicturePage','mediaIndex':0}) }}"><i class="fa-solid fa-pencil"></i></a>
                        </button>
                        <!-- Button trigger modal delete -->
                        <button type="button" class="btn btn-danger "  data-toggle="modal" data-target="#modalDeleteImage0">
                            <i class="fa-solid fa-trash-can"></i>
                        </button>
                    </div>
                    <h1 style="font-size: 68px" >Edition de {{ trick.name }}</h1>
                </div>
            </div>
            <div class="border-bottom my-4 pb-4">
                {% if trick.pictures %}
                    <h2 class="text-center my-4">Modifier les images</h2>
                    <div class="px-2 px-md-5 px-xl-2 d-flex justify-content-start flex-wrap">
                        {% set nb = 0 %}
                        {% for picture in trick.pictures %}
                            <div class="card col-12 col-lg-1 mx-auto my-3 m-xl-4" style="width: 300px; height: 400px" >
                                <div class="h-100 text-decoration-none d-flex justify-content-center overflow-hidden" style="background: center/ cover no-repeat url({{ asset('images/'~picture) }})">
                                </div>
                                <div class=" card-footer bg-dark d-flex justify-content-end ">
                                    <div>
                                        <button type="button" class="btn btn-outline-primary text-light me-2 p-0">
                                            <a class="btn text-light" href="{{ path('app_tricks_editmedia',{'trickName':trick.name,'slug':'updatePicturePage','mediaIndex':nb}) }}"><i class="fa-solid fa-pencil"></i></a>
                                        </button>
                                        <!-- Button trigger modal delete -->
                                        <button type="button" class="btn btn-outline-danger text-light ms-2"  data-toggle="modal" data-target="#modalDeleteImage{{ nb }}">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- Delete modal -->
                                <div  class="modal fade text-dark" id="modalDeleteImage{{ nb ? nb : 0}}" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title text-dark" >Suppression d'image</h5>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous certain de vouloir supprimer cette image ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
                                                <a class="ms-2 text-light" href="{{ path('app_tricks_editmedia',{'trickName':trick.name,'slug':'deletePicture','mediaIndex':nb}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% set nb = nb + 1 %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="d-flex flex-column align-items-center">
                    <h3 class="my-5" >Ajouter des images</h3>
                    <div class="col-8 col-lg-6">
                        {{ form_start(form,{'action':path('app_tricks_managetrick',{'slug':'update','name':trick.name})}) }}
                        <div class="form-group">
                            {{ form_label(form.images) }}
                            {{ form_widget(form.images) }}
                            <div class="form-error text-danger">
                                {{ form_errors(form.images) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="border-bottom my-4 pb-4">
                {% if trick.videos %}
                    <h2 class="text-center my-4">Modifier les vidéos</h2>
                    <div class="p-lg-2 d-flex justify-content-center justify-content-md-start flex-wrap">
                        {% set nb = 0 %}
                        {% for video in trick.videos %}
                            <div class="card col-12 col-lg-1 mx-auto my-3 m-xl-4" style="width: 300px; height: 400px" >
                                <iframe class="my-2 mx-1 mx-lg-2 col-10 col-lg-3" style="height: 300px; width: 400px; " src="{{ video }}" allowfullscreen></iframe>
                                <div class=" card-footer bg-dark d-flex justify-content-end ">
                                    <div>
                                        <button type="button" class="btn btn-outline-primary text-light me-2 p-0">
                                            <a class="btn text-light" href="{{ path('app_tricks_editmedia',{'trickName':trick.name,'slug':'updateVideoPage','mediaIndex':nb}) }}"><i class="fa-solid fa-pencil"></i></a>
                                        </button>
                                        <!-- Button trigger modal delete -->
                                        <button type="button" class="btn btn-outline-danger text-light ms-2"  data-toggle="modal" data-target="#modalDeleteVideo{{ nb }}">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- Delete modal -->
                                <div  class="modal fade text-dark" id="modalDeleteVideo{{ nb }}" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title text-dark" >Suppression de video</h5>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous certain de vouloir supprimer cette video ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
                                                <a class="ms-2 text-light" href="{{ path('app_tricks_editmedia',{'trickName':trick.name,'slug':'deleteVideo','mediaIndex':nb}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% set nb = nb + 1 %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="d-flex flex-column align-items-center">
                    <h3 class="my-5" >Ajouter une vidéo</h3>
                    <div class="col-8 col-lg-6">
                        <div class="form-group">
                            {{ form_label(form.videos) }}
                            {{ form_widget(form.videos) }}
                            <div class="form-error text-danger">
                                {{ form_errors(form.videos) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column align-items-center border-bottom my-4 pb-4">
                <h2 class="my-5" >Modifier le nom</h2>
                <div class="col-8 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        <div class="form-error text-danger">
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column align-items-center border-bottom my-4 pb-4">
                <h2 class="my-5" >Modifier la description</h2>
                <div class="col-8 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        <div class="form-error text-danger">
                            {{ form_errors(form.description) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column align-items-center ">
                <h2 class="my-5" >Modifier le groupe</h2>
                <div class="col-8 col-lg-6">
                    <div class="form-group">
                        {{ form_label(form.tricksGroup) }}
                        {{ form_widget(form.tricksGroup) }}
                        <div class="form-error text-danger">
                            {{ form_errors(form.tricksGroup) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-50 mx-auto mb-4 ps-4"><small>Les noms de champs comportant un astérisque ( * ) sont requis</small></div>
            <div class="w-50 mx-auto my-5 d-flex justify-content-end">
                <div class="form-group me-3">
                    {{ form_row(form.submit) }}
                </div>
                <div class="ms-3">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger "  data-toggle="modal" data-target="#modalDelete">Supprimer</button>
                    <!-- Modal -->
                    <div  class="modal fade text-dark" id="modalDelete" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title text-dark" >Suppression de : {{ trick.name }}</h5>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous certain de vouloir supprimer cette figure ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Retour</button>
                                    <a class="ms-2 text-light" href="{{ path('app_tricks_managetrick',{'slug':'delete','name':trick.name}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
