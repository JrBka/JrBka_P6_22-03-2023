{% extends 'base.html.twig' %}

{% block title %}Snowtrick - Update Picture {% endblock %}

{% block body %}
    <section class="mb-5 mb-lg-2 pb-5 pb-lg-2">
        <div class="border min-vh-100 ">
            <div class="w-auto m-auto " style="height: 50vh; background: center/ cover no-repeat url({{ asset('images/snowboard.jpg') }})">
                <div class="position-relative px-4 px-lg-5 h-100 mw-100 d-flex justify-content-center align-items-center" style="background-color: black; opacity: 0.7">
                    <h1 class="text-center" style="font-size: 64px" >Modification de la video</h1>
                </div>
            </div>
            <h2 class="text-center my-4">Changer la video</h2>
            <div class="my-3 my-md-5 d-flex justify-content-center flex-wrap">
                <div class="col-10 col-md-5 col-lg-3">
                    <iframe class="w-100" style="height: 250px" src="{{ video }}" allowfullscreen></iframe>
                </div>
            </div>
            <div class="d-flex justify-content-center my-4">
                <div class="col-10 col-lg-6">
                    {{ form_start(form,{'action':path('app_tricks_editmedia',{'trickName':trickName,'slug':'updateVideo','mediaIndex':index})}) }}
                    <div class="form-group">
                        {{ form_label(form.video) }}
                        {{ form_widget(form.video) }}
                        <div class="form-error text-danger">
                            {{ form_errors(form.video) }}
                        </div>
                    </div>
                    {{ form_row(form.submit) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
