{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section class="vh-100 position-relative" style="background: center/ cover no-repeat url('{{ asset('images/hero.jpg') }}')" id="hero">
        <div class=" px-4 px-lg-5 h-100 w-100 d-flex justify-content-center align-items-center" style="background-color: black; opacity: 0.7">
                <div class="col-md-10 col-lg-8 col-xl-7" >
                    <div>
                        <h1 class="text-primary text-center" style="font-size: 96px; font-weight: bold;">SNOWTRICKS</h1>
                        <p class="text-light text-center" style="font-size: 20px; font-weight: bold;" >Bonjour je suis Jimmy Sweat, un passionné de snowboard.
                            L'objectif de ce site est de partager ma passion et aider à l'apprentissage des figures (tricks).</p>
                    </div>
                </div>

            <a href="#tricks"><button type="button" class="position-absolute btn btn-outline-primary rounded-circle p-3"
                       style="bottom: 15vh; right: 5vw" ><i class="fa-solid fa-arrow-down fa-2xl"></i></button></a>
        </div>
    </section>
    <section class="mt-4" id="tricks">
        <div class="d-flex justify-content-around flex-wrap">
            {% for trick in tricks %}
                <a href="#" class="card m-2 col-2 text-decoration-none">
                    <img class="w-100 h-100" src="{{ trick.picture ?: asset('images/snowboard.jpg') }}" alt="snowboard-trick">
                    <div class="card-footer bg-dark text-light">
                        {{ trick.name }}
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
